@model MVCProje.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Ad</label>
        <input type="text" class="form-control" name="URUNAD" required="" />
    </div>
    <div>
        <label>Ürün Marka</label>
        <input type="text" class="form-control" name="MARKA"required="" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.Tbl_Kategoriler.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyat</label>
        <input type="text" class="form-control" name="FIYAT"required="" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="STOK"required="" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-success">Ürün Ekle</button>
    </div>
</form>

