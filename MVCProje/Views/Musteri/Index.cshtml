@using MVCProje.Models.Entity;
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MUSTERİ ID</th>
        <th>MUSTERİ AD</th>
        <th>MUSTERİ SOYAD</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>
    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MUSTERIID</td>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/Musteri/Sil/@mus.MUSTERIID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">Güncelle</a></td>
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id=mus.MUSTERIID }, new
                    {
                        @class = "btn btn-warning",
               onclick = "return confirm('Gerçekten Silmek İstiyormusunuz?')"
                    })
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>