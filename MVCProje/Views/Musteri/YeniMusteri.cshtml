@model MVCProje.Models.Entity.Tbl_Musteriler 
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşeteri Ad</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>Müşeteri Soyad</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>
    <div style="margin-top:15px">
       <button class="btn btn-success" id="btn1">Müşeteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri Eklendi!!!');
        });
    </script>
</form>
